<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Flair</h1>

<!-- #1 -->
      <form action="/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
<!-- #2 -->
          <input value="<%= flair.name%>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <input type="color" name="color" value="#f6b73c">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
