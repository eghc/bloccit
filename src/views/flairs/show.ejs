<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1 style= "color:<%= flair.color%>"><%= flair.name%></h1>
      <a href="/flairs/<%= flair.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/flairs/<%= flair.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <ul class="list-group">
        <% flair.topics.forEach((topic) => { %>
          <li class="list-group-item">
            <a href="/topics/<%= topic.id %>"> <%= topic.title %> </a>
          </li>
        <% }) %>
      </ul>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
